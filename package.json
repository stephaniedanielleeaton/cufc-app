  "engines": {
    "node": "20.x"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "typescript": "^4.9.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-jwt": "^8.5.1",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "jwks-rsa": "^3.2.0",
    "mongoose": "^8.15.0"
  },
  "jestSonar": {
    "reportPath": "coverage",
    "reportFile": "test-report.xml",
    "indent": 2
  },
  "devDependencies": {
    "@jest-mock/express": "^3.0.0",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
