{
  "name": "cufc-backend",
  "version": "1.0.0",
  "description": "Backend services for the CUFC application",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "build": "npx tsc --project tsconfig.json",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "heroku-postbuild": "npm run build",
    "dev:backend": "nodemon src/index.ts",
    "dev:frontend": "cd cufc-frontend && npm start",
    "dev:all": "npm-run-all --parallel dev:backend dev:frontend",
    "prepare": "husky install",
    "lint": "eslint . --ext .ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": "20.x"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "npm run lint -- --fix"
    ],
    "cufc-frontend/src/**/*.{ts,tsx,js,jsx}": [
      "cd cufc-frontend && npm run lint"
    ]
  },
  "dependencies": {
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/express-jwt": "^7.0.0",
    "@types/express-rate-limit": "^6.0.0",
    "@types/express-validator": "^3.0.0",
    "@types/node": "^22.15.21",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-jwt": "^8.5.1",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "jwks-rsa": "^3.2.0",
    "mongoose": "^8.15.0",
    "typescript": "^4.9.5"
  },
  "jestSonar": {
    "reportPath": "coverage",
    "reportFile": "test-report.xml",
    "indent": 2
  },
  "devDependencies": {
    "@jest-mock/express": "^3.0.0",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.21",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "eslint": "8.57.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "jest-sonar-reporter": "^2.0.0",
    "lint-staged": "16.0.0",
    "mongodb-memory-server": "^10.1.4",
    "nodemon": "^3.1.10",
    "npm-run-all": "4.1.5",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2"
  }
}
